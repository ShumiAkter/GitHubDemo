package lec07Scanner;

public class Loop {
	public static void main(String[] args) {
		int n = 2;
		for (int i = 25; i < 10; i -= 3) {
			System.out.println(i + n);
		}
		System.out.println("..........For loop...............");
		int l= 2;
		for (int i = 18; i > 10; i = i - 3) {
			System.out.println("i="+i);
			System.out.println("i+l="+(i + l));	//20,17,14,
		}
		int k = 2;
		for (int i = 20; i > 10; i = i - 3) {
			System.out.println(i + k); //22, 19, 16, 
		}
		System.out.println(".........................");
		for (int i =1; i<10; i=i+3) {
			System.out.println(i);//1,4,7
			
		}
		System.out.println(".........................");
		int j =2;
		for (int i =1; i<10; i=i+3) {
			System.out.println(i*j); 		//2,8,14,
		}
		System.out.println(".........................");
		for (int i =5; i>0; i--) {
			System.out.println(i); 		//5,4,3,2,1
		}
		System.out.println(".........for loop................");
		int m =2;
		for(n =25; n>10;n=n-3) {
			System.out.println(n/m);		//12, 11,9,8,6,
		}
		
		
		
		
		System.out.println(",,,,,,,,,,,,,,,,,,While Loop,,,,,,,,,,,,,,,");
		int i=0;
		while(i<=10) {
			System.out.println(i); 		// 0, 1, 2,3,4,....10
			i++;
		}
		System.out.println(",,,,,,,,,,,,,,,,,,While Loop,,,,,,,,,,,,,,,");
		int v=5;
		while(v<=10) {
			System.out.println(v); 		// 5,7,9
			v+=2;
		}	
		
		System.out.println(",,,,,,,,,,,,,,,,,,While Loop,,,,,,,,,,,,,,,");
		int t=2;
		int y=16;
		while(y>5) {
			System.out.print(y*t+" ,"); 		// 32,26,20,14
			y=y-3;
		}
		
		
		
		
		System.out.println("\n,,,,,,,,,,,,,,,,,,Do Loop,,,,,,,,,,,,,,,");
		
		int h=0;
		do {
			System.out.println(h);//0,1,2,3,...10
			h++;	
		}while(h<=10);
	} 

}
