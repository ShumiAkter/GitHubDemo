package hw6IfElseCondition02;

import java.util.Scanner;

public class Temperature {
public static void main(String[] args) {
	System.out.println("Today's Weather: ");
	Scanner scanner = new Scanner(System.in);
	int todaysTempature = scanner.nextInt();
	
	if( todaysTempature < 32) {
		System.out.println("Freezing");		
	}else if( todaysTempature < 55) {
		System.out.println("Pleasant");		
	}else if( todaysTempature < 73) {
		System.out.println("Getting Warm");		
	}else if( todaysTempature >101) {
		System.out.println("Very Hot");		
	}else {
		System.out.println("Please put a valid temperature");
	}
	
	scanner.close();
}

}

